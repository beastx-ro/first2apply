# Never hoist Electron dependencies - they need to stay in local node_modules
public-hoist-pattern[]=!*electron*
public-hoist-pattern[]=!*@electron-forge*
public-hoist-pattern[]=!*electron-forge*

# Disable shamefully-hoist for better isolation
shamefully-hoist=false

# Use single lockfile
shared-workspace-lockfile=true

# Allow build scripts for necessary packages
enable-pre-post-scripts=true