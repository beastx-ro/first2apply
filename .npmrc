# Use hoisted node-linker for Electron Forge compatibility
node-linker=hoisted

# Disable public hoisting for better isolation
public-hoist-pattern[]=*electron*
public-hoist-pattern[]=*@electron-forge*

# Disable shamefully-hoist for better isolation
shamefully-hoist=false

# Use single lockfile
shared-workspace-lockfile=true

# Allow build scripts for necessary packages
enable-pre-post-scripts=true