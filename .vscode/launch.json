{
  "configurations": [
    {
      "name": "Run invoice downloader",
      "type": "node",
      "request": "launch",
      "program": "${workspaceFolder}/apps/invoiceDownloader/src/main.ts",
      "runtimeArgs": ["--require", "ts-node/register", "--inspect=0.0.0.0:9229"],
      "sourceMaps": true,
      "skipFiles": ["<node_internals>/**"],
      "outFiles": ["${workspaceFolder}/apps/invoiceDownloader/src/**/*.ts"],
      "cwd": "${workspaceFolder}/apps/invoiceDownloader",
      "restart": true,
      "console": "integratedTerminal" // Optional: to see console output in VS Code's terminal
    },
    {
      "type": "node",
      "request": "launch",
      "name": "Electron Main",
      "runtimeExecutable": "${workspaceFolder}/node_modules/@electron-forge/cli/script/vscode.sh",
      "windows": {
        "runtimeExecutable": "${workspaceFolder}/node_modules/@electron-forge/cli/script/vscode.cmd"
      },
      "cwd": "${workspaceFolder}/apps/desktopProbe",
      "console": "integratedTerminal"
    }
  ]
}
